{% if match is defined and match %}
    <div>
        <h3><a href="{{ path('admin_add_match_player_route', {id: match.id}) }}"><i class="fa fa-plus-square-o" aria-hidden="true"></i></a></h3>
        {% if match.matchPlayers|length > 0 %}
            <hr>
            <div class="row">
                <div class="col-6 text-center mb-3"><a class="font-weight-bold" href="{{ path('admin_detail_team_route', {id: match.home.id}) }}">{{ match.home }}</a></div>
                <div class="col-6 text-center mb-3"><a class="font-weight-bold" href="{{ path('admin_detail_team_route', {id: match.visitor.id}) }}">{{ match.visitor }}</a></div>
            </div>

            <div class="row">
                <div class="col-6 text-center">
                    <ul>
                        {% for matchPlayer in match.getHomePlayers %}
                            <li class="mb-3 default-window" id="match-player-{{ matchPlayer.id }}">
                                {% include(template_dir ~ 'match/match_player.html.twig') with {matchPlayer: matchPlayer} only %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-6 text-center">
                    <ul>
                        {% for matchPlayer in match.getVisitorPlayers %}
                            <li class="mb-3 default-window" id="match-player-{{ matchPlayer.id }}">
                                {% include(template_dir ~ 'match/match_player.html.twig') with {matchPlayer: matchPlayer} only %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
{% endif %}