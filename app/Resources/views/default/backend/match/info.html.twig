
{% if match is defined and match %}
    <div>
        <h3><a href="{{ path('admin_add_edit_match_route', {id: match.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></h3>
        <hr>
        <div class="row">
            <div class="col-6 text-center mb-3"><a class="font-weight-bold" href="{{ path('admin_detail_team_route', {id: match.home.id}) }}">{{ match.home }}</a></div>
            <div class="col-6 text-center mb-3"><a class="font-weight-bold" href="{{ path('admin_detail_team_route', {id: match.visitor.id}) }}">{{ match.visitor }}</a></div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'match.championship'|trans }}</label>
                <br>
                <a href="{{ path('admin_detail_championship_route', {id: match.championship.id}) }}">{{ match.championship }}</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'match.season'|trans }}</label>
                <br>
                {{ match.season }}
            </div>
        </div>
        {% if match.championship.cup %}
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <label class="mb-0">{{ 'match.stage'|trans }}</label>
                    <br>
                    {{ ('match.stage_' ~ match.stage)|trans }}
                </div>
            </div>
        {% endif %}
        <div class="row mt-3">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'match.place'|trans }}</label>
                <br>
                {{ match.place }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'match.time'|trans }}</label>
                <br>
                {{ match.scheduledAt|date('d.m.Y H:i') }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'match.result'|trans }}</label>
                <br>
                {% if match.result is defined and match.result %}
                {{ match.result }}
                {% else %}
                    -
                {% endif %}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'result.yellow_card'|trans }}</label>
                <br>
                {% if match.result is defined and match.result %}
                    {{ match.result.homeYellowCard }} - {{ match.result.visitorYellowCard }}
                {% else %}
                    -
                {% endif %}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <label class="mb-0">{{ 'result.red_card'|trans }}</label>
                <br>
                {% if match.result is defined and match.result %}
                    {{ match.result.homeRedCard }} - {{ match.result.visitorRedCard }}
                {% else %}
                    -
                {% endif %}
            </div>
        </div>
        {% if match.description %}
            <div class="row mt-3">
                <div class="col-12">{{ match.description|nl2br }}</div>
            </div>
        {% endif %}
    </div>
{% endif %}
