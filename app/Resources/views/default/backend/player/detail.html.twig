{% extends  'default/backend/layout/12.html.twig' %}

{% block body %}
    {% if player is defined and player %}
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link{% if tab == 0 %} active{% endif %}" id="info-tab"
                   data-toggle="tab" href="#info" role="tab" aria-controls="info"
                   aria-selected="{% if tab == 0 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none">
                        <i class="fa fa-info" aria-hidden="true"></i>
                    </span>
                    <span class="d-none d-md-block">{{ 'label.info'|trans }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if tab == 1 %} active{% endif %}"
                   id="teams-tab" data-toggle="tab" href="#teams" role="tab" aria-controls="teams"
                   aria-selected="{% if tab == 1 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none">
                        <i class="fa fa-group" aria-hidden="true"></i>
                    </span>
                    <span class="d-none d-md-block"></i> {{ 'label.teams'|trans }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if tab == 2 %} active{% endif %}" id="pictures-tab"
                   data-toggle="tab" href="#pictures" role="tab" aria-controls="pictures"
                   aria-selected="{% if tab == 2 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none">
                        <i class="fa fa-file-image-o" aria-hidden="true"></i>
                    </span>
                    <span class="d-none d-md-block">{{ 'label.gallery'|trans }}</span>
                </a>
            </li>
        </ul>
        <div class="tab-content content-block" id="myTabContent">
            <div class="tab-pane fade{% if tab == 0 %} show active{% endif %}" id="info" role="tabpanel" aria-labelledby="info-tab">
                {{ include(template_dir ~ 'player/personal.html.twig') }}
            </div>
            <div class="tab-pane fade{% if tab == 1 %} show active{% endif %}" id="teams" role="tabpanel" aria-labelledby="teams-tab">
                {% include(template_dir ~ 'player/teams.html.twig') with {id: player.id} only %}
            </div>
            <div class="tab-pane fade{% if tab == 2 %} show active{% endif %}" id="pictures" role="tabpanel" aria-labelledby="pictures-tab">
                {% include(template_dir ~ 'player/pictures.html.twig') with {
                    player: player
                } only %}
            </div>
        </div>
    {% endif %}
{% endblock %}
