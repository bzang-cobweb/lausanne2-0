{% extends  'default/backend/layout/12.html.twig' %}

{% block body %}
    {% if team is defined and team %}
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link{% if tab == 0 %} active{% endif %}" id="info-tab"
                   data-toggle="tab" href="#info" role="tab" aria-controls="info"
                   aria-selected="{% if tab == 0 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none"><i class="fa fa-info" aria-hidden="true"></i></span><span class="d-none d-md-block">{{ 'label.info'|trans }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if tab == 1 %} active{% endif %}" id="matches-tab"
                   data-toggle="tab" href="#matches" role="tab" aria-controls="matches"
                   aria-selected="{% if tab == 1 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none"><i class="fa fa-futbol-o" aria-hidden="true"></i></span><span class="d-none d-md-block">{{ 'label.matches'|trans }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if tab == 2 %} active{% endif %}" id="players-tab"
                   data-toggle="tab" href="#players" role="tab" aria-controls="players"
                   aria-selected="{% if tab == 2 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none"><i class="fa fa-male" aria-hidden="true"></i></span><span class="d-none d-md-block"></i> {{ 'label.players'|trans }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if tab == 3 %} active{% endif %}" id="championships-tab"
                   data-toggle="tab" href="#championships" role="tab" aria-controls="championships"
                   aria-selected="{% if tab == 3 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none"><i class="fa fa-trophy" aria-hidden="true"></i></span><span class="d-none d-md-block">{{ 'label.championships'|trans }}</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if tab == 4 %} active{% endif %}" id="pictures-tab"
                   data-toggle="tab" href="#pictures" role="tab" aria-controls="pictures"
                   aria-selected="{% if tab == 4 %}true{% else %}false{% endif %}">
                    <span class="d-block d-md-none"><i class="fa fa-file-image-o" aria-hidden="true"></i></span><span class="d-none d-md-block">{{ 'label.gallery'|trans }}</span>
                </a>
            </li>
        </ul>
        <div class="tab-content content-block" id="myTabContent">
            <div class="tab-pane fade{% if tab == 0 %} show active{% endif %}" id="info" role="tabpanel" aria-labelledby="info-tab">
                {{ include(template_dir ~ 'team/info.html.twig') }}
            </div>
            <div class="tab-pane fade{% if tab == 1 %} show active{% endif %}" id="matches" role="tabpanel" aria-labelledby="matches-tab">
                {% include(template_dir ~ 'team/matches.html.twig') with {id: team.id} only %}
            </div>
            <div class="tab-pane fade{% if tab == 2 %} show active{% endif %}" id="players" role="tabpanel" aria-labelledby="players-tab">
                {% include(template_dir ~ 'team/players.html.twig') with {id: team.id} only %}
            </div>
            <div class="tab-pane fade{% if tab == 3 %} show active{% endif %}" id="championships" role="tabpanel" aria-labelledby="championships-tab">
                {% include(template_dir ~ 'team/championships.html.twig') with {id: team.id} only %}
            </div>
            <div class="tab-pane fade{% if tab == 4 %} show active{% endif %}" id="pictures" role="tabpanel" aria-labelledby="pictures-tab">
                {% include(template_dir ~ 'team/pictures.html.twig') with {
                    team: team
                } only %}
            </div>
        </div>
    {% endif %}
{% endblock %}
